@page "/bypass-city/{RequestUrl}/{BypassedUrl}"
@using Bypasser.Components.Layout
@inject IJSRuntime Js

<PageTitle>@_loadingText</PageTitle>

<HeadContent>
    <script>
            window.copyToClipboard = (text) => {
            navigator.clipboard.writeText(text).then(() => {
                console.log("Copied to clipboard");
            }).catch(err => {
                console.error("Could not copy text: ", err);
            });
        };
    </script>
</HeadContent>

<div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
    <MudExpansionPanels MultiExpansion="true" Style="max-width: 50%; width: 100%;" Elevation="10">

        @if (_isLoading)
        {
            <Loader LoadingText="@_loadingText" />
        }
        else
        {
            <MudExpansionPanel Style="border: rgba(255, 255, 255, .1); border-width: .2px; border-style: solid; color:white; " Disabled="true" HideIcon="true" Expanded="true">
                <TitleContent>
                    <MudStack Row="true" Spacing="1">
                        <MudText Style="color:white;">Requested Url: </MudText>
                        <MudLink Href="@BaseUrl" Target="_blank">
                            @BaseUrl
                        </MudLink>
                    </MudStack>
                </TitleContent>
                <ChildContent>
                    <MudStack>
                        <MudDivider Style="color:white;" />
                        <MudText>
                            The resolved url is
                            <MudLink Href="@BypassedUrl" Target="_blank">
                                @BypassedUrl
                            </MudLink>
                        </MudText>
                        <MudDivider Style="color:white;" />
                        <MudText Style="font-weight: bold;" Typo="Typo.h5">
                            <MudIcon Icon="@Icons.Material.Filled.QrCodeScanner" Color="Color.Info" Size="Size.Medium" />
                            Embedded Content
                        </MudText>
                        <div style="justify-content: center; align-items: center;max-height:300px;overflow: auto; padding-top:10px;">
                            <MudGrid Justify="Justify.Center" Spacing="2">
                                @foreach (Bypass.MediaData mega in MegaLinks)
                                {
                                    <MudItem xs="4">
                                        <MediaLocation Href="@mega.Url" IconSrc="@Assets["icons/mega.ico"]" RootName="@mega.MegaTitle" DirectorySize="@mega.DirectorySize" ImageCount="@mega.ImageCount" VideoCount="@mega.VideoCount" />
                                    </MudItem>
                                }
                                @foreach (Bypass.MediaData mega in BunkrLinks)
                                {
                                    <MudItem xs="4">
                                        <MediaLocation Href="@mega.Url" IconSrc="@Assets["icons/bunkr.ico"]" RootName="@mega.MegaTitle" DirectorySize="@mega.DirectorySize" ImageCount="@mega.ImageCount" VideoCount="@mega.VideoCount" />
                                    </MudItem>
                                }
                                @foreach (Bypass.MediaData mega in GoFileLinks)
                                {
                                    <MudItem xs="4">
                                        <MediaLocation Href="@mega.Url" IconSrc="@Assets["icons/gofile.png"]" RootName="@mega.MegaTitle" DirectorySize="@mega.DirectorySize" ImageCount="@mega.ImageCount" VideoCount="@mega.VideoCount" />
                                    </MudItem>
                                }
                            </MudGrid>
                        </div>

                        <MudText Style="font-weight: bold;" Typo="Typo.h5">
                            <MudIcon Icon="@Icons.Material.Filled.QrCodeScanner" Color="Color.Info" Size="Size.Medium" />
                            Extracted Links
                        </MudText>
                        <div style="justify-content: center; align-items: center;">
                            <MudCard Outlined="true" Square="false" Elevation="10">
                                <MudCardContent style="max-height:250px;overflow: auto;">
                                    <MudStack>
                                        <MudDivider Style="color:white;" />
                                        <MudButton @onclick="CopyLinksToClipboard" Size="Size.Small" Variant="Variant.Filled" Color="Color.Secondary" Style="text-transform:none;" FullWidth="true">
                                            Copy All Links
                                        </MudButton>
                                        <MudDivider Style="color:white;" />
                                        @foreach (string link in ExtractedLinks)
                                        {
                                            <MudButton Href="@link" Target="_blank" Size="Size.Small" Variant="Variant.Outlined" Color="Color.Secondary" Style="text-transform:none;" FullWidth="true">
                                                @link
                                            </MudButton>
                                        }
                                    </MudStack>
                                </MudCardContent>
                            </MudCard>
                        </div>
                    </MudStack>
                </ChildContent>
            </MudExpansionPanel>
        }
    </MudExpansionPanels>
</div>

@code {

    public readonly List<string> ExtractedLinks = [];
    public readonly List<Bypass.MediaData> MegaLinks = [];
    public readonly List<Bypass.MediaData> BunkrLinks = [];
    public readonly List<Bypass.MediaData> GoFileLinks = [];

    private bool _isLoading = true;
    
    private string _loadingText = "Parsing result Url...";

    private string BaseUrl => RequestUrl;

    [Parameter] public required string BypassedUrl { get; set; }
    [Parameter] public required string RequestUrl { get; set; }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        if (string.IsNullOrEmpty(BypassedUrl)) { return; }
        if (string.IsNullOrEmpty(RequestUrl)) { return; }

        RequestUrl = RequestUrl.FromBase64();
        BypassedUrl = BypassedUrl.FromBase64();

        Log($"BypassCity: {RequestUrl} | {BypassedUrl}", State.Info);
        
        Program.Database.InsertOrUpdate(RequestUrl, BypassedUrl);

        _loadingText = "Extracting links...";
        StateHasChanged();
        try
        {
            ExtractedLinks.AddRange(await PageParsers.ExtractRentryLinks(BypassedUrl));

            if (ExtractedLinks.Any(x=> x.Contains("mega.nz")))
            {
                _loadingText = "Parsing Mega.nz Links...";
                StateHasChanged();
                MegaLinks.AddRange(await DownloadParser.GetMegaData(ExtractedLinks.Where(x=> x.Contains("mega.nz")).ToList()));    
            }

            if (ExtractedLinks.Any(x => x.Contains("bunkr") && (x.Contains("/a/") || x.Contains("/v/") || x.Contains("/f/"))))
            {
                _loadingText = "Parsing Bunkr Links...";
                StateHasChanged();
                BunkrLinks.AddRange(await DownloadParser.GetBunkrData(ExtractedLinks.Where(x=> x.Contains("bunkr") && (x.Contains("/a/") || x.Contains("/v/") || x.Contains("/f/"))).ToList()));
            }

            if (ExtractedLinks.Any(x => x.Contains("gofile.io")))
            {
                _loadingText = "Parsing Gofile.io Links...";
                StateHasChanged();
                GoFileLinks.AddRange(await DownloadParser.ParseGoFileData(ExtractedLinks.Where(x => x.Contains("gofile.io")).ToList()));
            }
        }
        catch (Exception ex) { Log(ex.Message); }
        finally
        {
            
            _isLoading = false;
            _loadingText = "Completed!";
            StateHasChanged();
        }
    }

    private async Task CopyLinksToClipboard() => await Js.InvokeVoidAsync("copyToClipboard", string.Join("\n", ExtractedLinks));
}